<!DOCTYPE html>
<html>
    <head>
        {{! Document settings }}
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        {{! Page meta }}
        <title>{{meta_title}}</title>
        <meta name="decription" content="{{meta_description}}">

        <meta name="HandheldFriendly" content="true">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <link rel="shortcut icon" href="{{asset "images/favicon.ico"}}">
        <link rel="stylesheet" href="{{asset "css/material.min.css"}}" media="screen" charset="utf-8">
        <link rel="stylesheet" href="{{asset "css/font-awesome.min.css"}}" media="screen" charset="utf-8">
        <link rel="stylesheet" href="{{asset "css/ghost.css"}}" media="screen" charset="utf-8">
    </head>
    <body class="{{body_class}} site-wrapper">
        <header class="site-header">
            <img class="site-header__logo" src="{{asset "images/logo.png"}}" alt="logo">
            <div class="site-header__block">
                <h2 class="site-header__title">{{@blog.title}}</h2>
                <h3 class="site-header__decription">{{@blog.description}}</h3>
            </div>
        </header>
        {{navigation}}
        <div class="site-content">
            {{{body}}}
        </div>
        <footer class="site-footer">
            <section class="site-footer__miitbeian">
                <a href="http://www.miitbeian.gov.cn">浙ICP备15043847号</a>
            </section>
            <section class="site-footer__copyright">
                <a href="{{@blog.url}}">{{@blog.title}}</a> &copy; {{date format="YYYY"}}
            </section>
            <section class="site-footer__poweredby">
                Powered by <a href="https://ghost.org">Ghost</a>
            </section>
        </footer>
        <div class="site-tools">
            <button class="site-tools__top mdl-button mdl-js-button mdl-button--fab mdl-button--mini-fab mdl-js-ripple-effect mdl-button--colored mdl-shadow--4dp mdl-color--accent" id="scroll-to-top" type="button"><i class="fa fa-arrow-up"></i></button>
        </div>
        <script src="{{asset "js/jquery.min.js"}}" charset="utf-8"></script>
        <script src="{{asset "js/material.min.js"}}" charset="utf-8"></script>
        <script src="{{asset "js/ghost.js"}}" charset="utf-8"></script>
    </body>
</html>
