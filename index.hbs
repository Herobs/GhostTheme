{{!< default}}

<main>
    {{#foreach posts}}
    <article class="{{post_class}} mdl-shadow--4dp">
        {{#if image}}
        <img class="post__header" src="{{image}}" />
        {{/if}}
        <div class="post__body">
            <h2 class="post__title"><a href="{{url}}">{{{title}}}</a></h2>
            <section class="post__excerpt">
                <p>{{excerpt words="96"}} <a class="post__read-more" href="{{url}}">&raquo;</a></p>
            </section>
            <footer class="post__meta">
                {{#if author.image}}<img class="author-thumb" src="{{author.image}}" alt="{{author.name}}" nopin="nopin" />{{/if}}
                {{author}}
                {{tags prefix=" on "}}
                <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
            </footer>
        </div>
    </article>
    {{/foreach}}
</main>
